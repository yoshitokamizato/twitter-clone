<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      Hello, <%= current_user.user_name %>!
      <%= link_to 'タイムライン', authenticated_root_path %>
      <%#= link_to 'マイページ', user_path %>
      <%= link_to 'フォロー/フォロワー', user_follows_path(current_user.id) %>
      <%= link_to 'いいねしたツイート', user_likes_path(current_user.id) %>
      <%= link_to 'アカウント変更', edit_user_registration_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "新規作成", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>

    <h1>Twitterもどきだよ</h1>
    <%= yield %>
    
  </body>
</html>
